<div id='user-details-holder'>
<%= bootstrap_form_for @user, layout: :horizontal,  remote: true do |f| %>
    <%= hidden_field_tag :replace_with, params[:replace_with] %>
  <div class="card-body">
    <%= f.email_field :email %>
    <% if @user.new_record? %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
    <%end %>
    <%= f.text_field :name %>
    <%= f.text_field :mobile %>
    <%= f.check_box :admin %>
  </div>
  <% if @user.new_record? %>
    <div class="card-footer">
      <button type="submit" class="btn btn-info">Create</button>
      <button type="submit" class="btn btn-default float-right">Cancel</button>
    </div>
  <% else %>
    <button type="submit" class="btn btn-info">Update</button>
      <%= link_to "Cancel", user_path(@user, replace_with: params[:replace_with]),  class: "btn" %>
  <% end %>
<% end %>

</div>

