
<div id='customer-details-holder'>
  <%= bootstrap_form_for @customer,   remote: true do |f| %>
    <%= hidden_field_tag :replace_with, params[:replace_with] %>
    <div class="card-body">
      <%= f.text_field :name, label: "Company name"%>
      <%= f.text_field :mobile %>
      <%= f.text_field :address %>
    </div>
    <% if @customer.new_record? %>
      <div class="card-footer">
        <button type="submit" class="btn btn-info">Create</button>
        <button type="submit" class="btn btn-default float-right">Cancel</button>
      </div>
    <% else %>
      <div class="offset-sm-4 col-sm-10">
        <button type="submit" class="btn btn-info">Update</button>
        <%= link_to "Cancel", user_path(@customer, replace_with: params[:replace_with]),  class: "btn btn-danger" %>
      </div>
    <% end %>
  <% end %>

</div>