<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <a href="<%= root_path %>" class="brand-link">
    <img src="<%= asset_path "logo.png" %>" alt="AC" class="brand-image img-circle elevation-3"
         style="opacity: .8">
    <span class="brand-text font-weight-light">Arbuda Computer</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img src="<%= asset_path "user.png" %>" class="img-circle elevation-2" alt="User Image">
      </div>
      <div class="info">
        <a href="#" class="d-block"><%= current_user.name.titleize %></a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <!-- Add icons to the links using the .nav-icon class
             with font-awesome or any other icon font library -->
        <li class="nav-item">
          <a href="<%= root_path %>" class="nav-link <%= 'active' if controller_name == 'home'%>">
            <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>
              DashBoard
            </p>
          </a>
        </li>
        <% if can? :index, User %>
          <li class="nav-item">
          <a href="<%= users_path %>" class="nav-link <%= 'active' if controller_name == 'users'%>">
            <i class="nav-icon fa fa-users"></i>
            <p>
              Employees
            </p>
          </a>
        </li>
        <% end %>
          <li class="nav-item">
          <a href="<%= customers_path %>" class="nav-link <%= 'active' if controller_name == 'customers'%>">
            <i class="nav-icon fa fa-users"></i>
            <p>
              Customers
            </p>
          </a>
        </li>
        <li class="nav-item">
          <a href="<%= complains_path %>" class="nav-link <%= 'active' if controller_name == 'complains'%>">
            <i class="nav-icon far fa-envelope"></i>
            <p>
              Complains
            </p>
          </a>
        </li>

      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>